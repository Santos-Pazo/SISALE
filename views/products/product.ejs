<%- include('../partials/header') %>>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Pc Works</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <h2><a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a></h2>
        <h2><a class="nav-item nav-link" href="/routeProd">Productos</a></h2>
        <h2><a class="nav-item nav-link" href="">Comentarios</a></h2>
       
      </div>
    </div>
  </nav>
    
    
     <% for (const product of productos) { %>
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <a href="/routeProd/<%= product.id %>/detail"><img class="imagenprod" src="<%= product.imagen %>" alt="" width="200px"/></a>
        </div>
        <div class="col-md-8">
          <div class="card-body p-3">
            <h5 class="card-title"><%= product.nombre %></h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <a href="/routeProd/<%= product.id %>/detail" class="btn btn-primary">Ir al detalle</a>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>
      </div>
    </div>
     <% } %>
    <%- include('../partials/footer') %>>

    
    








